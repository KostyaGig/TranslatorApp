<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.zinoview.translatorapp.ui.view.SearchEditTextImpl
        android:id="@+id/word_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_word_text"
        />

    <Button
        android:id="@+id/search_word_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_text"/>

    <com.zinoview.translatorapp.ui.view.WordTextViewImpl
        android:id="@+id/word_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="House"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:textStyle="bold"
        android:textSize="@dimen/tszie_17sp"
        />

    <com.zinoview.translatorapp.ui.view.WordProgressBarImpl
        android:id="@+id/word_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
</LinearLayout>